<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp35"
    android:paddingVertical="5dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Tarea"
        android:textSize="20sp"
        android:textColor="@color/loading"
        android:layout_marginVertical="@dimen/dp5"/>

    <com.google.android.material.card.MaterialCardView
        app:cardElevation="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp5"
        app:cardCornerRadius="@dimen/dp20"
        app:strokeColor="@color/colorPrimaryDark2"
        app:strokeWidth="2dp">

        <ImageView
            android:id="@+id/iv_tasks"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>